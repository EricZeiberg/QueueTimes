<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true" xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="#34495e">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Ride Detail View"
                  android:textSize="20dp"
                  android:fontFamily="sans-serif"
                  android:id="@+id/ride_detail_view_textview"
                  android:gravity="center_horizontal"
                  android:padding="5dp"
                  android:textColor="@android:color/white"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="25" >

            <Button
                    android:layout_width="0dip"
                    android:layout_margin="3dp"
                    android:id="@+id/current_wait_time_button"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/green_gradient"
                    android:text="Current Wait Time"/>

            <Button
                    android:layout_width="0dip"
                    android:layout_margin="3dp"
                    android:id="@+id/longest_wait_time_button"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/green_gradient"
                    android:text="Longest Wait Time"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="25" >

            <Button
                    android:layout_width="0dip"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/last_week_wait_time_button"
                    android:background="@drawable/green_gradient"
                    android:text="Last Week's Wait Time"/>

            <Button
                    android:layout_width="0dip"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:id="@+id/average_daily_wait_time_button"
                    android:layout_weight="1"
                    android:background="@drawable/green_gradient"
                    android:text="Average Wait Time during the Day"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="25" >

            <Button
                    android:layout_width="0dip"
                    android:id="@+id/average_wait_time_last_year_button"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_gradient"
                    android:text="Average Wait Time during the year"/>

            <Button
                    android:layout_width="0dip"
                    android:id="@+id/average_wait_time_last_month_button"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_gradient"
                    android:layout_weight="1"
                    android:text="Average Wait Time during the month"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="25" >

            <Button
                    android:layout_width="0dip"
                    android:id="@+id/average_wait_time_last_week_button"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_gradient"
                    android:text="Average Wait Time during the week"/>

            <Button
                    android:layout_width="0dip"
                    android:id="@+id/open_status_button"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_gradient"
                    android:layout_weight="1"
                    android:text="This ride is currently open!"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
